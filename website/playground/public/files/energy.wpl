[[help-url "https://wipple.dev/doc/energy.html"]]

[help "Track the energy used by a program."]
[help-group "Energy Use"]
with-energy : syntax {
  with-energy 'body -> {
    with-ui "/playground/ui/energy/index.js" (handle -> {
      handle . message "begin" ()
      'body
      handle . message "end" ()
    })
  }
}

[entrypoint]
entrypoint :: Entrypoint
entrypoint : program -> with-energy { program () }
