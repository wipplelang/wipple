{
    "name": "wipple-vscode-extension",
    "displayName": "Wipple",
    "description": "Wipple language support",
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [],
    "activationEvents": [
        "onLanguage:wipple"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "wipple",
                "aliases": [
                    "Wipple",
                    "wipple"
                ],
                "extensions": [
                    ".wpl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "wipple",
                "scopeName": "source.wipple",
                "path": "./syntaxes/wipple.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.182",
        "@types/node": "14.x",
        "@types/vscode": "^1.54.0",
        "ts-loader": "^9.2.8",
        "typescript": "^4.6.4",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "execa": "^6.1.0",
        "lodash": "^4.17.21"
    }
}
