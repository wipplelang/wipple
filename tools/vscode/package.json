{
    "name": "wipple",
    "displayName": "Wipple Language Support",
    "description": "IDE support for the Wipple programming language",
    "version": "0.3.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wipplelang/wipple.git"
    },
    "engines": {
        "vscode": "^1.72.0"
    },
    "categories": [],
    "activationEvents": [
        "onLanguage:wipple"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "wipple",
                "aliases": [
                    "Wipple",
                    "wipple"
                ],
                "extensions": [
                    ".wpl"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "dark": "./icons/wipple-small.svg",
                    "light": "./icons/wipple-small.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "wipple",
                "scopeName": "source.wipple",
                "path": "./syntaxes/wipple.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Wipple",
            "properties": {
                "wipple.wipplePath": {
                    "type": "string",
                    "default": "wipple",
                    "description": "Path to `wipple` command."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/vscode": "^1.72.0",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "ts-loader": "^9.2.8",
        "typescript": "^4.6.4",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.2"
    }
}
