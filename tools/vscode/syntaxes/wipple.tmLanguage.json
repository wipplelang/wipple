{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Wipple",
    "patterns": [
        {
            "name": "string",
            "match": "\"(?:[^\"\\\\]|\\\\.)*\""
        },
        {
            "name": "comment.line",
            "match": "--.*"
        },
        {
            "name": "constant.numeric",
            "match": "\\b-?[0-9]+(\\.[0-9]+)?\\b"
        },
        {
            "name": "punctuation",
            "match": "'|\\.\\.\\."
        },
        {
            "name": "keyword",
            "match": "_|use|when|type|trait|instance|where|external|syntax|format"
        },
        {
            "name": "keyword.operator",
            "match": "(?:^|\\s)[~`!@#$%^&*\\-_=+;:,<.>/?]+(?:\\s|$)"
        },
        {
            "name": "entity.name.type",
            "match": "\\b[A-Z][^\\r\\n\\t \\(\\)\\[\\]\\{\\}'\"/]*\\b"
        },
        {
            "name": "entity.name",
            "match": "\\b[^\\r\\n\\t \\(\\)\\[\\]\\{\\}'\"/]+\\b"
        }
    ],
    "scopeName": "source.wipple"
}
