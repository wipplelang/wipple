{
    "name": "wipple-vscode-extension",
    "description": "Wipple language support",
    "author": "Wilson Gramer",
    "license": "MIT",
    "version": "0.3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/wipplelang/wipple"
    },
    "publisher": "wilsongramer",
    "categories": [],
    "engines": {
        "vscode": "^1.63.0"
    },
    "activationEvents": [
        "onLanguage:wipple"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "wipple",
                "aliases": [
                    "Wipple",
                    "wipple"
                ],
                "extensions": [
                    ".wpl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "wipple",
                "scopeName": "source.wipple",
                "path": "./syntaxes/wipple.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "(cd client && npm install) && (cd server && npm install)"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.13.0",
        "typescript": "^4.7.2"
    }
}
