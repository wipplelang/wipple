{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/vscode-client"
			],
            "preLaunchTask": "npm: compile - vscode-client"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "restart": true,
            "program": "${workspaceRoot}/tools/lsp/server",
            "preLaunchTask": "npm: build - server"
        }
    ],
    "compounds": [
        {
            "name": "Client + Server",
            "configurations": ["Launch Client", "Launch Server"]
        }
    ]
}
