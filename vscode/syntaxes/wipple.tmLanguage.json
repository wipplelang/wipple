{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Wipple",
    "patterns": [
        {
            "name": "string",
            "match": "\"(?:[^\"\\\\]|\\\\.)*\""
        },
        {
            "name": "comment.line",
            "begin": "\\-\\-",
            "end": "$"
        },
        {
            "name": "constant.numeric",
            "match": "\\b-?[0-9]+(\\.[0-9]+)?\\b"
        },
        {
            "name": "punctuation",
            "match": "'|\\.\\.\\."
        },
        {
            "name": "keyword",
            "match": "_|!|when|type|trait|instance|intrinsic|infer"
        },
        {
            "name": "keyword.operator",
            "match": "as|to|by|^|\\*|/|%|\\+|-|<|<=|>|>=|=|/=|is|and|or|\\.|->"
        },
        {
            "name": "entity.name",
            "match": "\\.\\.\\.|[A-Za-z0-9\\-_]+[?]?"
        }
    ],
    "scopeName": "source.wipple"
}
