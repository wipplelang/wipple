{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Wipple",
    "patterns": [
        {
            "name": "comment.line",
            "begin": "\\-\\-",
            "end": "$"
        },
        {
            "name": "constant.numeric",
            "match": "-?[0-9]+(\\.[0-9]+)?"
        },
        {
            "name": "keyword",
            "match": "\\b(_|!|when|type|trait|instance|intrinsic|infer)\\b"
        },
        {
            "name": "keyword.operator",
            "match": "as|to|by|\\^|\\*|\\/|%|\\+|-|<|<=|>|>=|=|\\/=|is|and|or|\\.|->|:|::|=>"
        },
        {
            "name": "entity.name",
            "match": "\\b([A-Za-z0-9\\-_]+[?]?)\\b"
        },
        {
            "name": "string",
            "match": "\"(?:[^\"\\\\]|\\\\.)*\""
        }
    ],
    "scopeName": "source.wipple"
}
