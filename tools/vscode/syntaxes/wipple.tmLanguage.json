{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Wipple",
    "patterns": [
        {
            "name": "string",
            "match": "\"(?:[^\"\\\\]|\\\\.)*\""
        },
        {
            "name": "comment.line",
            "begin": "\\-\\-",
            "end": "$"
        },
        {
            "name": "constant.numeric",
            "match": "\\b-?[0-9]+(\\.[0-9]+)?\\b"
        },
        {
            "name": "punctuation",
            "match": "'|\\.\\.\\."
        },
        {
            "name": "keyword",
            "match": "_|use|when|type|trait|instance|where|external|syntax|format|with|intrinsic|semantics|snippet"
        },
        {
            "name": "keyword.operator",
            "match": ":|::|->|=>|\\.|\\|"
        },
        {
            "name": "entity.name",
            "match": "\\b[^\\s]+\\b"
        }
    ],
    "scopeName": "source.wipple"
}
